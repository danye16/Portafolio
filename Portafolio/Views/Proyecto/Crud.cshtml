@* List<ProyectoModel>;
@{
    ViewData["Title"] = "Listar";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<body style="background-color:black">

    <div class="Proyectos mt-4">
        <div class="card-header">
            <h1 style="color:white">Mis proyectos</h1>
        </div>
    </div>
    <div class="album py-5 bg-body-tertiary">

        <div class="album py-5 bg-body-tertiary">
            <div class="container">
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


                    @foreach (var item in Model)
                    {
                        <div class="col">
                            <div class="card shadow-sm">

                                <div class="cool-md-1">
                                    <div class="cuadro mb-1">
                                        <TABLE border style="background-color:beige">
                                            <TR>

                                                <img src="/css/ima.jpg">
                                                <h2 style="color:white"> @Html.DisplayFor(modelItem=>item.Nombre)</h2>
                                                <TD>
                                                    <p>@Html.DisplayFor(modelItem=>item.Lenguaje)</p>

                                                    <p>@Html.DisplayFor(modelItem=>item.Descripcion)</p>

                                                    <p> <a href="@Html.DisplayFor(modelItem=>item.Link)"> Link de Git</a></p>
                                                </TD>
                                                <td>
                                                    <a asp-action="Editar" asp-controller="Proyecto" asp-route-numedificio="@item.IdProyecto" class="btn btn-warning btn-sm"> Editar</a>
                                                    <a asp-action="Eliminar" asp-controller="Proyecto" asp-route-numedificio="@item.IdProyecto" class="btn btn-danger btn-sm"> Eliminar</a>
                                                </td>
                                            </TR>

                                        </TABLE>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }



                </div>*@
