@model ProyectoModel;

<div class="card col-8">
    <div class="card-header">
        <h1>Nombre del proyecto</h1>
    </div>
    <div class="card-body justify-content-center">
        <form asp-action="Editar" asp-controller="Proyecto" method="post">
            <input asp-for="IdProyecto" type="hidden" class="form-control" />
            <div>
                <label for="staticEmail2">Nombre del proyecto</label>
                <input type="text" asp-for="Nombre" class="form-control" />
            </div>
            <div class="col-md-4 mb-3">
                <label for="staticEmail2">Lenguaje utilizado</label>
                <input type="text" asp-for="Lenguaje" class="form-control" />
            </div>
            <div>
                <label for="staticEmail2">Descripcion</label>
                <input type="text" asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div>
                <label for="staticEmail2">Link</label>
                <input type="text" asp-for="Link" class="form-control" />
                <span asp-validation-for="Link" class="text-danger"></span>
            </div>
            <div class="col-md-4 mb-3">
                <button type="submit" class="btn btn-primary mb-3 btn-sm">Guardar</button> <br />
                <a asp-action="Listar" asp-controller="Proyecto" class="btn btn-warning btn-sm"> Volver a la lista</a>
            </div>
        </form>
    </div>
</div>